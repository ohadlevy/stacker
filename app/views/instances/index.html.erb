<% title "Instances" %>

<table>
  <tr>
    <th>UUID</th>
    <th>Deployment</th>
    <th>Resource</th>
    <th></th>
  </tr>
  <% for instance in @instances %>
    <tr>
      <td><%= link_to instance.uuid, instance %></td>
      <td><%= instance.deployment %></td>
      <td><%= instance.resource %></td>
      <td><%= link_to "Destroy", instance, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Instance", new_instance_path %></p>
