<% title "Stacks" %>

<% title_actions display_link_if_authorized("New Stack", hash_for_new_stack_path), help_path %>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Deployments</th>
    <th>Resources</th>
    <th></th>
  </tr>
  <% for stack in @stacks %>
    <tr>
      <td><%= link_to stack.name, edit_stack_path(stack) %></td>
      <td><%= stack.deployments.count %></td>
      <td><%= stack.resources.count %></td>
      <td><%= link_to "Destroy", stack, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
