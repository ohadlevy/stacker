<%= form_for @resource do |f| %>
  <%= base_errors_for @resource %>
  <%= selectable_f f, :type, Resource.subclasses.collect{|r| [r.titleize, r ] } %>

  <% if @resource.new_record? -%>
    <%= select_f f, :external_resource_id, ForemanHostgroup.list, :id, :title %>
  <% else -%>
    <%= text_f f, :name %>
  <% end -%>

  <%= submit_or_cancel f %>

<% end %>
