
<% title _("Resources") %>
<% title_actions display_link_if_authorized(_("New Resource"), hash_for_new_resource_path), help_path %>

<table class="table table-bordered table-striped table-two-pane">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Instances</th>
    <th></th>
  </tr>
  <% for resource in @resources %>
    <tr>
      <td><%= link_to_if_authorized resource.name, hash_for_resource_path(resource) %></td>
      <td><%= resource.type.to_s.titleize %></td>
      <td><%= resource.instances.count %></td>
      <td>
        <%= action_buttons(
        link_to("Edit", edit_resource_path(resource)),

        display_delete_if_authorized(hash_for_resource_path(:id => resource), :confirm => _("Delete %s?") % resource.name))%>
      </td>
    </tr>
  <% end %>
</table>
